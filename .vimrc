set nocompatible
syntax on
set background=dark

set softtabstop=2
set ignorecase
set smartcase
set incsearch
set showmatch
set hlsearch

" No backup file and no swap file
set nobackup
set noswapfile


set encoding=utf-8 " Necessary to show unicode glyphs

set smartindent
set autoindent
set tabstop=2
set shiftwidth=2
set expandtab
